        <Button Content="," HorizontalAlignment="Left" Margin="22,56,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.518,0.511" Click="Button_Click" FontSize="20"/>
        <Button Content="C" HorizontalAlignment="Left" Margin="76,56,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button HorizontalAlignment="Left" Margin="131,56,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20" Content="CE"/>
