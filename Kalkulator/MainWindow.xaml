        <Button Content="8" HorizontalAlignment="Left" Margin="76,111,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="131,111,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="186,56,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="22,167,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.518,0.511" Click="Button_Click" FontSize="20"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="76,167,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="6" HorizontalAlignment="Left" Margin="131,167,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="x" HorizontalAlignment="Left" Margin="186,111,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="1" HorizontalAlignment="Left" Margin="22,222,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.518,0.511" Click="Button_Click" FontSize="20"/>
        <Button Content="2" HorizontalAlignment="Left" Margin="76,222,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="131,222,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="20"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="186,167,0,0" VerticalAlignment="Top" Height="50" Width="50" RenderTransformOrigin="0.5,0.516" Click="Button_Click" FontSize="30" Opacity="0.99"/>
